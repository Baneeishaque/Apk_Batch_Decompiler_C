            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/apk_directory_decompiler.exe",
            "args": [
                "E:\\DK-HP-PA-2000AR\\Laboratory\\CMD_GCC\\apk_directory_decompiler\\sample_apks"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": true,
            //TODO : More than one pre-launch task
            "preLaunchTask": "compile Apk Directory Decompiler",
            "MIMode": "gdb",
            // "miDebuggerPath": "C:\\Programs\\mingw64\\bin\\gdb.exe",
            "miDebuggerPath": "gdb.exe",
            "setupCommands": [
                {
